{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": [
      "ESNext",
      "DOM"
    ],
    "skipLibCheck": true,
    "noEmit": true,
    "baseUrl": "./",
    "paths": {
      // "@/types": "src/types",
      "@/*": [
        "src/*"
      ],
      // "routes/*": [
      //   "src/router/*"
      // ],
      // "@/store": "src/store",
      // "pages/*": [
      //   "src/pages/*"
      // ],
      // "@/components": "src/components",
      // "@/utils": "src/utils",
      // "assets/*": [
      //   "src/assets/*"
      // ],
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}